
@model ASPNETCORERoleManagement.Models.GpoCiaGlobal;
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<h4><span class="label label-info">@HttpContextAccessor.HttpContext.Session.GetString("_GpoCia")</span></h4>

@{
    ViewData["Title"] = "Index";
}

<h4>Seleccione su Grupo de Compañia para trabajar </h4>
<h4> de click en el botón Seleccionar</h4>
<h5> Una vez seleccionado puede ir al menú deseado</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GpociaG" class="control-label"></label>
                <!--                <input asp-for="Gbukrs" class="form-control" /> -->
                <select asp-for="GpociaG"
                        class="form-control"
                        asp-items="@(new SelectList(ViewBag.ListofCategory,"Gbukrs","Nombre"))"></select>

                <span asp-validation-for="GpociaG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Seleccionar" class="btn btn-success" />
            </div>
        </form>
    </div>
    <div class="form-group">
        @ViewBag.GpoCiaG
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
