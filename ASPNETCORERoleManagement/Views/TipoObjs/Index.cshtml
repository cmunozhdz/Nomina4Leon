@model IEnumerable<ASPNETCORERoleManagement.Models.TipoObj>

@{
    ViewData["Title"] = "Tipo de Objetivos";
}

<h2>Tipo de objetivos|Grupo de Compañia:@ViewBag.GpoCiaG</h2>
<div class="panel panel-default">
    <div class="panel-heading">Criterios de búsqueda</div>
    <div class="panel-body">
        @using (Html.BeginForm(null, null, FormMethod.Get))
        {
        <fieldset class="form-group  form-horizontal  ">
            <div class="col-xs-3">
                @Html.Label("Sociedad", "Sociedad:")

                @Html.TextBox("SociedadPar", null, new { @class = "form-control input-sm " })
            </div>
            <div class="col-xs-6">
                @Html.Label("Descripcion", "Descripción:")
                @Html.TextBox("DescripcionPar", null, new { @class = "form-control input-sm" })
            </div>

            
            
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            

            

        </fieldset>
        }

    </div>
</div>
<p>
    <a asp-action="Create" class="btn btn-success ">Nuevo</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoObjId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gbukrs)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.bukrs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoObjId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.gbukrs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.bukrs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TipoObjId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.TipoObjId">Visualizar</a> |
                    <a asp-action="Delete" asp-route-id="@item.TipoObjId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
