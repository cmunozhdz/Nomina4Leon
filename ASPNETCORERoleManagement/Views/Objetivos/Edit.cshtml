@model ASPNETCORERoleManagement.Models.Objetivo

@{
    ViewData["Title"] = "Edit";
}
<ul class="nav nav-tabs">

    <li role="presentation">
        @*asp-route-TipoObjId:Forza el parametro para hacer la busqueda por Tipo de Objetivo*@
        <a asp-controller="TipoObjs"
           asp-action="Details"
           asp-route-id="@ViewBag.TipoObjID">
            Tipo Objetivos
        </a>

    </li>
    <li role="presentation" class="active"><a href="#">Objetivos</a></li>
    <li role="presentation"><a href="#">Messages</a></li>
</ul>

<h2>Editar</h2>
<h4>Objetivo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="IdObjetivo" class="control-label"></label>
                <input asp-for="IdObjetivo" class="form-control" readonly="readonly"  />
                <span asp-validation-for="IdObjetivo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inicio" class="control-label"></label>
                <input asp-for="Inicio" class="form-control" />
                <span asp-validation-for="Inicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fin" class="control-label"></label>
                <input asp-for="Fin" class="form-control" />
                <span asp-validation-for="Fin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoObjId" class="control-label"></label>

                <input asp-for="TipoObjId" class="form-control" value="@ViewBag.TipoObjId" readonly="readonly" />
                <span asp-validation-for="TipoObjId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <nav class="navbar navbar-light bg-light">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    <a asp-action="Index" asp-route-TipoObjId="@ViewBag.TipoObjId" class="btn btn-default">cancelar</a>
                </nav>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
