@model ASPNETCORERoleManagement.Models.IT0
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Crear";
}

<h4>Crear Clase de Medida</h4>
<h5>@ViewBag.NoPer <span class="label label-info"> @ViewBag.Nombre</span></h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input asp-for="Gbukrs" class="form-control" style="display:none" />
                <span asp-validation-for="Gbukrs" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Bukrs" class="form-control" style="display:none" />
                <span asp-validation-for="Bukrs" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Pernr" class="form-control" style="display:none" />
                <span asp-validation-for="Pernr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subty" class="control-label"></label>
                <input asp-for="Subty" class="form-control" />
                <span asp-validation-for="Subty" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="BegDa" class="control-label"></label>
                <input asp-for="BegDa" class="form-control" />
                <span asp-validation-for="BegDa" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="EndDa" class="control-label"></label>
                <input asp-for="EndDa" class="form-control" />
                <span asp-validation-for="EndDa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seqnr" class="control-label"></label>
                <input asp-for="Seqnr" class="form-control" />
                <span asp-validation-for="Seqnr" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Aedtm" class="form-control" style="display:none" />
                <span asp-validation-for="Aedtm" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Uname" class="form-control" style="display:none" />
                <span asp-validation-for="Uname" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Massn" class="control-label"></label>
                <select asp-for="Massn"
                        class="form-control"
                        asp-items="@(new SelectList(ViewBag.ListaClases, "Value", "Text"))"></select>                <span asp-validation-for="Massn" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Massg" class="control-label"></label>

                <select asp-for="Massg"
                        class="form-control"
                        id="Massg" name="Massg"
                        asp-items="@(new SelectList(string.Empty, "Value", "Text"))"></select>
                <span asp-validation-for="Massg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estatus" class="control-label"></label>
                <select asp-for="Estatus" id="Estatus" class="form-control" asp-items="@(new SelectList(ViewBag.ListaEst, "Estatus", "Desc"))"></select>

                <span asp-validation-for="Estatus" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="PersonalId" class="form-control" style="display:none" />

            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Personals"
       asp-action="Edit"
       asp-route-id="@Model.PersonalId">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
  $(document).ready(function(){
      $('#Massn').change(function() {
            var url = '@Url.Content("~/")' + "IT0_1/GetMassg1";
          var ddlsource = "#Massn";
          var ddlbuk = "#Bukrs";
          var ddlgbuk = "#Gbukrs";
          $.getJSON(url, { idp: $(ddlsource).val(), bukrs: $(ddlbuk).val(), gbukrs: $(ddlgbuk).val() }, function (data) {
                var items = '';
            $("#Massg").empty();
            $.each(data, function (i, divisiones) {
                    items += "<option value='" + divisiones.value + "'>" + divisiones.text + "</option>";
                });
            $('#Massg').html(items);
            });
        });
    });
    </script>
}
